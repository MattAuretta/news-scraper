{{!-- Nav Bar --}}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand">Mongo Scraper</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/saved">Saved Articles</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-danger scrape-btn" href="/scrape">Scrape Articles!</a>
            </li>
        </ul>
    </div>
</nav>

{{!-- Carousel --}}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="assets/images/ski1.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="assets/images/ski2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="assets/images/ski3.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

{{!-- Saved Articles --}}
<div class="container">
    {{#each results}}
    <div class="row article data-id={{this._id}}">
        <div class="col-sm-10">
            <p>{{this.title}}</p>
            <p>{{this.summary}}</p>
            <a href={{this.link}} target="_blank">{{this.link}}</a>
        </div>
        <div class="col-sm-2">
            <button type="button" class="btn btn-primary comment-btn" data-id={{this._id}} data-toggle="modal"
                data-target="#">Comment</button>
        </div>
    </div>
    {{/each}}
</div>

<!-- Modal -->
<div class="modal fade" id="comment-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLabel">Comments</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div id="comments-section"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <h5>Leave A Comment!</h5>
                        <textarea id='comment-input' name='title'></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div id="save-comment"></div>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>